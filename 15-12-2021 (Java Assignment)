code:

public class MyClass {
    public static void main(String args[]) {
        int n=4;
        int count=1;
        for(int i=1;i<=n;i++){
            for(int j=i;j<=n;j++){
                System.out.print(count);   
                count += 1;
            }
            count = 1;
            System.out.println();
        }
    }
}
