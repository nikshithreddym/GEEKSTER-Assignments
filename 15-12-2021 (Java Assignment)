code:

public class MyClass {
    public static void main(String args[]) {
        int n=5;
        int count=1;
        for(int i=1;i<=n;i++){
            for(int j=1;j<=i;j++){
                System.out.print(count+" ");   
                count += 1;
            }
            System.out.println();
        }
    }
}
